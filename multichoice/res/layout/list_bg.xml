<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:top="1dp" android:bottom="1dp" android:left="1dp"
		android:right="1dp">
		<shape android:shape="rectangle">
			<solid android:color="#AA121212" />
			<corners android:radius="5dp" />
			<stroke android:width="1dp" android:color="#4D4C4C" />
		</shape>
	</item>
	<item android:top="1dp" android:bottom="25dp" android:left="1dp"
		android:right="1dp">
		<shape android:shape="rectangle">
			<gradient android:startColor="#55FFFFFF" android:endColor="#44636363"
				android:angle="270" />
			<corners android:radius="5dp" />
		</shape>
	</item>
</layer-list>