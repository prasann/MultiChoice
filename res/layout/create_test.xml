<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearLayout7" android:background="@drawable/darkaurora"
              android:layout_height="match_parent" android:orientation="vertical" android:fadingEdge="vertical"
              android:layout_width="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:id="@+id/scrollView1" xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
        <LinearLayout android:id="@+id/linearLayout6" android:orientation="vertical" android:layout_width="fill_parent"
                      android:layout_height="wrap_content">
            <TextView android:text="Test Name" android:id="@+id/TextView01" android:paddingTop="10dp"
                      android:paddingLeft="5dp" android:layout_height="wrap_content" android:paddingBottom="10dp"
                      android:layout_width="wrap_content"></TextView>
            <EditText android:id="@+id/testName" android:paddingLeft="5dp" android:layout_height="wrap_content"
                      android:layout_width="match_parent"></EditText>
            <TextView android:text="Test Code" android:id="@+id/textView1" android:paddingTop="10dp"
                      android:paddingLeft="5dp" android:layout_height="wrap_content" android:paddingBottom="10dp"
                      android:layout_width="match_parent"></TextView>
            <EditText android:id="@+id/testCode" android:paddingLeft="5dp" android:layout_height="wrap_content"
                      android:layout_width="match_parent"></EditText>
            <LinearLayout android:id="@+id/linearLayout1" android:layout_height="wrap_content"
                          android:layout_width="match_parent">
                <TextView android:text="No of Questions: " android:id="@+id/TextView02" android:paddingTop="10dp"
                          android:paddingLeft="5dp" android:layout_height="wrap_content" android:paddingBottom="10dp"
                          android:layout_width="wrap_content"></TextView>
                <TextView android:text="1" android:id="@+id/questCount" android:layout_height="wrap_content"
                          android:gravity="left" android:layout_width="match_parent"></TextView>
            </LinearLayout>
            <SeekBar android:layout_height="wrap_content" android:max="25" android:id="@+id/questSeek"
                     android:layout_width="match_parent"></SeekBar>
            <LinearLayout android:id="@+id/linearLayout5" android:layout_height="wrap_content"
                          android:layout_width="match_parent">
                <TextView android:text="Set Scoring Rules" android:id="@+id/textView4"
                          android:layout_height="wrap_content" android:gravity="center"
                          android:layout_width="fill_parent"></TextView>
            </LinearLayout>
            <LinearLayout android:layout_marginTop="15dp" android:id="@+id/linearLayout4"
                          android:layout_height="wrap_content" android:layout_width="match_parent"
                          android:layout_marginBottom="15dp">
                <LinearLayout android:id="@+id/linearLayout2" android:orientation="vertical"
                              android:layout_height="wrap_content" android:layout_gravity="left"
                              android:layout_width="wrap_content">
                    <TextView android:id="@+id/textView2" android:layout_height="wrap_content"
                              android:layout_gravity="center_horizontal" android:layout_width="wrap_content"
                              android:text="InCorrect Answers"></TextView>
                    <kankan.wheel.widget.WheelView android:layout_marginTop="5dp" android:layout_height="100dp"
                                                   android:id="@+id/wrongAnswers"
                                                   android:layout_gravity="center_horizontal"
                                                   android:layout_width="50dp"></kankan.wheel.widget.WheelView>
                </LinearLayout>
                <LinearLayout android:id="@+id/linearLayout3" android:orientation="vertical"
                              android:layout_height="wrap_content" android:layout_gravity="right"
                              android:layout_width="match_parent">
                    <TextView android:text="Correct Answers" android:id="@+id/textView3"
                              android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                              android:layout_width="wrap_content"></TextView>
                    <kankan.wheel.widget.WheelView android:layout_marginTop="5dp" android:layout_height="100dp"
                                                   android:id="@+id/correctAnswers"
                                                   android:layout_gravity="center_horizontal"
                                                   android:layout_width="50dp"></kankan.wheel.widget.WheelView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button android:id="@+id/quesBtn" android:layout_height="wrap_content" android:text="@string/quesBtnLabel"
            android:layout_width="match_parent"></Button>
</LinearLayout>
