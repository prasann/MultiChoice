<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_height="fill_parent"
              android:fadingEdge="horizontal" android:layout_width="match_parent" android:background="@drawable/darkaurora">
    <TextView android:paddingTop="10dp" android:id="@+id/TextView01" android:paddingLeft="5dp"
              android:layout_height="wrap_content" android:text="Test Name"
              android:paddingBottom="10dp" android:layout_width="wrap_content"/>
    <EditText android:paddingLeft="5dp" android:layout_height="wrap_content" android:layout_width="match_parent"
              android:id="@+id/testName"/>
    <TextView android:id="@+id/textView1" android:layout_height="wrap_content" android:layout_width="match_parent"
              android:text="Test Code" android:paddingLeft="5dp" android:paddingTop="10dp"
              android:paddingBottom="10dp"/>
    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:paddingLeft="5dp"
              android:id="@+id/testCode"/>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent"
                  android:id="@+id/linearLayout1">
        <TextView android:paddingTop="10dp" android:id="@+id/TextView02" android:paddingLeft="5dp"
                  android:layout_height="wrap_content" android:layout_width="wrap_content"
                  android:text="No of Questions: " android:paddingBottom="10dp"/>
        <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:text="1"
                  android:gravity="left" android:id="@+id/questCount"/>
    </LinearLayout>
    <SeekBar android:layout_height="wrap_content" android:layout_width="match_parent" android:max="25"
             android:id="@+id/questSeek"/>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent"
                  android:id="@+id/linearLayout2" android:layout_weight="1"/>
    <Button android:id="@+id/quesBtn" android:text="@string/quesBtnLabel"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
